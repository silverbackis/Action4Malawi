{% extends 'base.html.twig' %}

{% block body %}
  {% include '_hero.html.twig' with {
    header: 'Be part of the change!'
  } %}
  {% embed '_generalText.html.twig' %}
    {% block header %}
      Donate to Action 4 Malawi
    {% endblock %}
    {% block text %}
      <p>We appreciate all donations and all money donated goes to Malawi to help with current and upcoming projects. Action4Malawi does not have any overheads.</p>
      <form action="https://www.paypal.com/cgi-bin/webscr" method="post">
        <input type="hidden" name="business" value="ahw@action4malawi.com" />
        <input type="hidden" name="cmd" value="_donations" />
        <input type="hidden" name="item_name" value="Donation to Action 4 Malawi" />
        <input type="hidden" name="item_number" value="A4M" />
        <input type="hidden" name="currency_code" value="USD" />
        <button type="submit" role="button" class="btn btn-primary mt-3 btn-lg-rounded">
          <img src="{{ asset('images/btnDonate.svg') }}" class="btn-donate">
        </button>
        <p class="mt-4">
          <img src="{{ asset('images/pay-logos-2.svg') }}" alt="Credit/Debit Cards also accepted via PayPal" style="max-width: 70%;" />
        </p>
        <img alt="" width="1" height="1" src="https://www.paypalobjects.com/en_US/i/scr/pixel.gif" >
      </form>
    {% endblock %}
  {% endembed %}
{% endblock %}
