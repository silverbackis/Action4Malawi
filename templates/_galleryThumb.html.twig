<li class="col-10 col-sm-4 col-lg-3 gallery-thumb" itemscope itemtype="https://schema.org/ImageGallery">
  <figure itemprop="associatedMedia" itemscope itemtype="https://schema.org/ImageObject">
    <a class="gallery-link" href="{{ asset(image.path) }}" itemprop="contentUrl">
      <div class="cover">
        <img src="{{ asset(image.path)|imagine_filter('thumbnail') }}" class="gallery-image" itemprop="thumbnail" alt="Gallery Image #1" />
      </div>
      <img src="{{ asset(image.path)|imagine_filter('thumbnail_square') }}" class="square-space" />
    </a>
    <meta itemprop="width" content="{{ image.width }}">
    <meta itemprop="height" content="{{ image.height }}">
    {# <figcaption itemprop="caption description">
      Long image description
      <span itemprop="copyrightHolder">Photo: AP</span>
    </figcaption> #}
  </figure>
</li>